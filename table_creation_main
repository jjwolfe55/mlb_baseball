CREATE SCHEMA mlb_baseball;

CREATE TABLE mlb_baseball.main_team_standings (
franchise_id SMALLINT UNSIGNED NOT NULL,
team_id CHAR(3) NOT NULL,
team_name VARCHAR(30) NOT NULL,
league CHAR(2) NOT NULL,
division CHAR(10) NOT NULL,
season_id SMALLINT UNSIGNED NOT NULL,
g SMALLINT UNSIGNED,
w SMALLINT UNSIGNED,
l SMALLINT UNSIGNED,
w_pct DECIMAL(4,3) UNSIGNED,
PRIMARY KEY (franchise_id,team_id,season_id)
);

CREATE TABLE mlb_baseball.main_team_venue_factor (
franchise_id SMALLINT UNSIGNED NOT NULL,
team_id CHAR(3) NOT NULL,
team_name VARCHAR(30) NOT NULL,
venue_name VARCHAR(40) NOT NULL,
season_id SMALLINT UNSIGNED NOT NULL,
batted_balls_home SMALLINT UNSIGNED NOT NULL,
h_home SMALLINT UNSIGNED NOT NULL,
1b_home SMALLINT UNSIGNED NOT NULL,
2b_home SMALLINT UNSIGNED NOT NULL,
3b_home SMALLINT UNSIGNED NOT NULL,
hr_home SMALLINT UNSIGNED NOT NULL,
bb_home SMALLINT UNSIGNED NOT NULL,
so_home SMALLINT UNSIGNED NOT NULL,
pa_home SMALLINT UNSIGNED NOT NULL,
batted_balls_away SMALLINT UNSIGNED NOT NULL,
h_away SMALLINT UNSIGNED NOT NULL,
1b_away SMALLINT UNSIGNED NOT NULL,
2b_away SMALLINT UNSIGNED NOT NULL,
3b_away SMALLINT UNSIGNED NOT NULL,
hr_away SMALLINT UNSIGNED NOT NULL,
bb_away SMALLINT UNSIGNED NOT NULL,
so_away SMALLINT UNSIGNED NOT NULL,
pa_away SMALLINT UNSIGNED NOT NULL,
PRIMARY KEY (franchise_id,team_id,season_id)
);

CREATE TABLE mlb_baseball.main_linear_weights (
season_id SMALLINT UNSIGNED NOT NULL,
1b DECIMAL(3,2) UNSIGNED NOT NULL,
2b DECIMAL(3,2) UNSIGNED NOT NULL,
3b DECIMAL(3,2) UNSIGNED NOT NULL,
hr DECIMAL(3,2) UNSIGNED NOT NULL,
bb DECIMAL(3,2) UNSIGNED NOT NULL,
ibb DECIMAL(3,2) UNSIGNED NOT NULL,
hbp DECIMAL(3,2) UNSIGNED NOT NULL,
sb DECIMAL(3,2) UNSIGNED NOT NULL,
cs DECIMAL(3,2) NOT NULL,
PRIMARY KEY (season_id)
);

CREATE TABLE mlb_baseball.main_player_hitting (
player_id INT UNSIGNED NOT NULL,
player_name VARCHAR(45) NOT NULL,
team_id CHAR(3) NOT NULL,
season_id SMALLINT UNSIGNED NOT NULL,
age TINYINT UNSIGNED,
g INT UNSIGNED,
pa INT UNSIGNED,
ab INT UNSIGNED,
1b INT UNSIGNED,
2b INT UNSIGNED,
3b INT UNSIGNED,
hr INT UNSIGNED,
bb INT UNSIGNED,
ibb INT UNSIGNED,
hbp INT UNSIGNED,
sf INT UNSIGNED,
sh INT UNSIGNED,
so INT UNSIGNED,
r INT UNSIGNED,
rbi INT UNSIGNED,
sb INT UNSIGNED,
cs INT UNSIGNED,
bip INT UNSIGNED,
exit_velo DECIMAL(5,2) UNSIGNED,
launch_ang DECIMAL(5,2) SIGNED,
barrel_count INT UNSIGNED,
hard_hit_count INT UNSIGNED,
PRIMARY KEY (player_id, team_id, season_id)
);

CREATE TABLE mlb_baseball.main_player_pitching (
player_id INT UNSIGNED NOT NULL,
player_name VARCHAR(45) NOT NULL,
team_id CHAR(3) NOT NULL,
season_id SMALLINT UNSIGNED NOT NULL,
age TINYINT UNSIGNED,
tbf INT UNSIGNED,
ip DECIMAL (4,1) UNSIGNED,
pitches INT UNSIGNED,
g INT UNSIGNED,
gs INT UNSIGNED,
1b INT UNSIGNED,
2b INT UNSIGNED,
3b INT UNSIGNED,
hr INT UNSIGNED,
bb INT UNSIGNED,
ibb INT UNSIGNED,
hbp INT UNSIGNED,
so INT UNSIGNED,
r INT UNSIGNED,
er INT UNSIGNED,
bip INT UNSIGNED,
exit_velo DECIMAL(5,2) UNSIGNED,
launch_ang DECIMAL(5,2) SIGNED,
barrel_count INT UNSIGNED,
hard_hit_count INT UNSIGNED,
PRIMARY KEY (player_id, team_id, season_id)
);

CREATE TABLE mlb_baseball.main_player_fielding (
player_id INT UNSIGNED NOT NULL,
player_name VARCHAR(45) NOT NULL,
team_id CHAR(3) NOT NULL,
season_id SMALLINT UNSIGNED NOT NULL,
pos CHAR(3),
inn DECIMAL(5,1) UNSIGNED,
plays SMALLINT UNSIGNED,
g SMALLINT UNSIGNED,
gs SMALLINT UNSIGNED,
po SMALLINT UNSIGNED,
a SMALLINT UNSIGNED,
e SMALLINT UNSIGNED,
drs SMALLINT SIGNED,
uzr DECIMAL(4,2) SIGNED,
sb SMALLINT UNSIGNED,
cs SMALLINT UNSIGNED,
pb SMALLINT UNSIGNED,
frm DECIMAL(4,2) SIGNED,
PRIMARY KEY (player_id,season_id,pos)
);

CREATE TABLE mlb_baseball.main_team_hitting (
team_id CHAR(3) NOT NULL,
season_id SMALLINT UNSIGNED NOT NULL,
age TINYINT UNSIGNED,
g INT UNSIGNED,
pa INT UNSIGNED,
ab INT UNSIGNED,
1b INT UNSIGNED,
2b INT UNSIGNED,
3b INT UNSIGNED,
hr INT UNSIGNED,
bb INT UNSIGNED,
ibb INT UNSIGNED,
hbp INT UNSIGNED,
sf INT UNSIGNED,
sh INT UNSIGNED,
so INT UNSIGNED,
r INT UNSIGNED,
rbi INT UNSIGNED,
sb INT UNSIGNED,
cs INT UNSIGNED,
bip INT UNSIGNED,
exit_velo DECIMAL(5,2) UNSIGNED,
launch_ang DECIMAL(5,2) SIGNED,
barrel_count INT UNSIGNED,
hard_hit_count INT UNSIGNED,
PRIMARY KEY (team_id, season_id)
);

CREATE TABLE mlb_baseball.main_team_pitching (
team_id CHAR(3) NOT NULL,
season_id SMALLINT UNSIGNED NOT NULL,
age TINYINT UNSIGNED,
tbf INT UNSIGNED,
ip DECIMAL (7,1) UNSIGNED,
pitches INT UNSIGNED,
g INT UNSIGNED,
gs INT UNSIGNED,
1b INT UNSIGNED,
2b INT UNSIGNED,
3b INT UNSIGNED,
hr INT UNSIGNED,
bb INT UNSIGNED,
ibb INT UNSIGNED,
hbp INT UNSIGNED,
so INT UNSIGNED,
r INT UNSIGNED,
er INT UNSIGNED,
bip INT UNSIGNED,
exit_velo DECIMAL(5,2) UNSIGNED,
launch_ang DECIMAL(5,2) SIGNED,
barrel_count INT UNSIGNED,
hard_hit_count INT UNSIGNED,
PRIMARY KEY (team_id, season_id)
);

CREATE TABLE mlb_baseball.main_team_fielding (
team_id CHAR(3) NOT NULL,
season_id SMALLINT UNSIGNED NOT NULL,
inn DECIMAL(7,1) UNSIGNED,
plays SMALLINT UNSIGNED,
g SMALLINT UNSIGNED,
gs SMALLINT UNSIGNED,
po SMALLINT UNSIGNED,
a SMALLINT UNSIGNED,
e SMALLINT UNSIGNED,
drs SMALLINT SIGNED,
uzr DECIMAL(4,2) SIGNED,
sb SMALLINT UNSIGNED,
cs SMALLINT UNSIGNED,
pb SMALLINT UNSIGNED,
frm DECIMAL(4,2) SIGNED,
PRIMARY KEY (team_id,season_id)
);
